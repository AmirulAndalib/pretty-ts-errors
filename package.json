{
  "name": "pretty-ts-errors",
  "displayName": "Pretty TypeScript Errors",
  "publisher": "yoavbls",
  "description": "Make TypeScript errors prettier and more human-readable in VSCode",
  "version": "0.2.3",
  "icon": "assets/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/yoavbls/pretty-ts-errors"
  },
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:type"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "type",
        "extensions": [
          ".type"
        ]
      }
    ],
    "grammars": [
      {
        "language": "type",
        "scopeName": "source.type",
        "path": "./syntaxes/type.tmGrammar.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "build": "vsce package",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/lz-string": "^1.3.34",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/prettier": "^2.7.2",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "ts-loader": "^9.3.1",
    "typescript": "^5.0.4",
    "webpack": "^5.76.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "lz-string": "^1.4.4",
    "prettier": "^2.8.7",
    "ts-dedent": "^2.2.0"
  }
}
